<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.css"/>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
<header>
    <div class="heading">
        <div class="container">
            <div class="heading-wrap">
                <div data-toggle-menu="" class="hamburger">
                    <div class="hamburger__top"></div>
                    <div class="hamburger__middle"></div>
                    <div class="hamburger__bottom"></div>
                </div>
                <div class="heading__logo">
                    <img src="img/logo.svg" alt="Tam Taram">
                </div>
            </div>
        </div>
    </div>
    <div class="nav-bar">
        <div class="container">
            <div class="nav-bar-wrap">
                <div class="nearest-salon">
                    <div class="nearest-salon__cursor">
                        Nearest Salon
                        <img src="img/ico_dropdown.svg" alt="">
                    </div>
                    <div class="nearest-salon__address">
                        Plush Salon 92101
                    </div>
                </div>
                <div class="nav-bar__search">
                    <img src="img/ico_search.svg" alt="Search">
                </div>
                <nav data-top-nav class="nav-bar-menu">
                    <%class NavItem {
                        constructor(text, href = '#') {
                            this.title = text;
                            this.href = href;
                        }
                    }

                    const topMenu =
                    [
                        new NavItem('haircare'),
                        new NavItem('color'),
                        new NavItem('styling'),
                        new NavItem('texture'),
                        new NavItem('get inspired'),
                        new NavItem('social'),
                        new NavItem('news'),
                        new NavItem('about'),
                        new NavItem('professional')
                    ]
                    %>
                    <ul class="nav-bar-menu-list">
                        <%topMenu.forEach(item => {%>
                            <li class="nav-bar-menu-list__item">
                                <a href="<%= item.href %>">
                                    <%= item.title %>
                                </a>
                            </li>
                        <%})%>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
<section>
    <div class="container">
        <ul class="breadcrumbs">
            <li class="breadcrumbs__item">home</li>
            <li class="breadcrumbs__items-separator">/</li>
            <li class="breadcrumbs__item-current">videos</li>
        </ul>
        <div class="article">
            <h1 class="article__title">
                Videos
            </h1>
            <div class="main-item">
                <div class="main-item__video">
                    <a data-fancybox href="https://www.youtube.com/watch?v=z8M0Fa1JVco&feature=youtu.be">
                        <div class="main-item__preview">
                            <img src="img/play-but.png" alt="Play" class="play-btn">
                        </div>
                    </a>
                </div>
                <div class="main-item__description">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    Pellentesque lobortis, nisl at ullamcorper egestas, felisadi piscing dolor, a interdum lorem urna
                    quis magna.
                </div>
            </div>
            <div class="video-examples">
                <% const videoExamplesItems = [
                    {
                        title: ['step', 'by', 'step'],
                        videos: ['z8M0Fa1JVco', 'Wi2KcdoCuo4', '8H6dYUgQKB8', 'PZjGrmHdFME', '_wLGr24VeoI', 'DG4FAU5qmMY']
                    },
                    {
                        title: ['craft', 'education'],
                        videos: ['RmNWNLXmswk', '-tztXOz8Vc0', 'kUfIVtyydgQ']
                    },
                    {
                        title: ['inspiration'],
                        videos: ['VmmwwzR536g', 'vz0k8O-Ef9Y', '6oPBFnsqJW8']
                    }
                ]
                %>
                <% videoExamplesItems.forEach(item => { %>
                <div class="video-examples-item">
                    <h2 class="video-examples-item__title">
                        <% item.title.forEach(word => { %>
                        <span><%= word %></span>
                        <% }) %>
                    </h2>
                    <div class="slick-slider">
                        <% item.videos.forEach(videoId => { %>
                            <div class="slick-slider__item">
                                <a data-fancybox href="https://www.youtube.com/watch?v=<%= videoId %>&feature=youtu.be">
                                    <div class="slick-slider__item-container">
                                        <img class="video-play-btn" src="img/play-but.png" alt="Play">
                                        <img class="slick-slider__item-preview" alt=""
                                              src="https://img.youtube.com/vi/<%= videoId %>/mqdefault.jpg">
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                    <div class="primary-btn tablet-plus-hidden">
                        <a href="#">load more</a>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</section>
<footer>
    <%
    const share = [
        {
            href: '#',
            svg: include('img/ico_facebook.svg')
        },
        {
            href: '#',
            svg: include('img/ico_twitter.svg')
        },
        {
            href: '#',
            svg: include('img/ico_pinterest.svg')
        },
        {
            href: '#',
            svg: include('img/ico_youtube.svg')
        },
        {
            href: '#',
            svg: include('img/ico_instagram.svg')
        }

    ] %>
    <div class="container">
        <div class="footing">
            <div class="share">
                <% share.forEach(item => { %>
                    <a href="<%= item.href %>">
                        <div class="share__ico"><%- item.svg %></div>
                    </a>
                <% }) %>
            </div>
            <div class="footing-options">
                <div class="location">
                    location: <span>united states</span>
                </div>
                <div class="language">
                    language: <span>english</span>
                </div>
            </div>
            <div class="footer-nav">
                <% const footerNav = [
                    new NavItem('privacy police'),
                    new NavItem('term of use'),
                    new NavItem('contact us'),
                    new NavItem('newsletter'),
                    new NavItem('sitemap')
                ] %>
                <ul class="footer-nav-list">
                    <% footerNav.forEach(item => { %>
                        <li class="footer-nav-list__item"><a href="<%= item.href %>"><%= item.title %></a></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</footer>
<script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.js"></script>
<script src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
<script src="js/scripts.js"></script>
</body>
</html>
